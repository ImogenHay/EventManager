#mySidebar.sidebar
  %a.closebtn{href: "javascript:void(0)", onclick: "closeNav()"} Ã—
  %a{href: "/"}
    %i.fa.fa-fw.fa-home
    = t('.home')
  %a{href: "/about"}
    %i.fa.fa-fw.fa-info-circle
    = t('.about')
  %a{href: "/events"}
    %i.fa.fa-fw.fa-star
    = t('.events')
  %a{href: "/locations"}
    %i.fa.fa-fw.fa-globe
    = t('.venues')
  %a{href: "/resources"}
    %i.fa.fa-fw.fa-search
    = t('.resources')
  %a{href: "/contact"}
    %i.fa.fa-fw.fa-envelope
    = t('.contact')
#main
  %nav
    %header
      %h3
        = t('.header')
        %i.fa.fa-fw.fa-user
        - if user_signed_in?
          = "#{current_user.email} |"
          = link_to t('profile'), edit_user_registration_path
          = '|'
          = link_to t('logout'), destroy_user_session_path, method: 'delete'
        - else
          = link_to t('login'), new_user_session_path
          = '|'
          = link_to t('sign_up'), new_user_registration_path

  %p
  %button.openbtn{onclick: "openNav()"}= t('.open')

  - flash.each do |key, value|
    = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?
