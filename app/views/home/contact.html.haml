%h1= t('.title')
%p= t('.contact_us')

= form_tag request_contact_path, method: 'post' do                       #path is where form will be submitted, RESTful method
  = label_tag :name, t('.name')                                          #label tag for field with name
  = text_field_tag :name, '', title: t('.enter_name'), size: 50          #form field of particular type
  = label_tag :email, t('.email')
  = email_field_tag :email, '', title: t('.enter_email')
  = label_tag :telephone, t('.telephone')
  = telephone_field_tag :telephone, '', title: t('.enter_telephone')
  = label_tag :message, t('.message')
  = text_field_tag :message, '', title: t('.enter_message'), size: 100
  = submit_tag t('.submit')                                             #submit button for form
