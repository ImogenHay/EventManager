%b Your Tickets:
%table
  %tbody
    - @event.tickets.each_with_index do |ticket, i|
      - row_class = ""
      - if i % 2 == 0
        - row_class = "even"
      - else
        - row_class = "odd"
      - if ticket.user == current_user
        %tr{id: "ticket_#{ticket.id}"}
          %td{:class => "#{row_class} plain"}= ticket.first_name
          %td{:class => "#{row_class} plain"}= ticket.last_name
          %td{:class => "#{row_class} plain"}= link_to 'Show', ticket
          %td{:class => "#{row_class} plain"}= link_to 'Edit', edit_ticket_path(ticket)
          %td{:class => "#{row_class} plain"}= link_to 'Destroy', ticket, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true

%p= link_to 'Book Ticket', new_ticket_path(event_id: @event)

= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path
