= form_for @ticket, :html => {:id => "TicketForm"} do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@ticket.errors.count, "error")}"
        = I18n.t('.error')
      %ul
        - @ticket.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :event
    %p= @ticket.event.name
    = f.hidden_field :event_id, value: @ticket.event.id
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :age
    = f.number_field :age
  .actions
    = f.submit I18n.t('.save')
