%h1= I18n.t('.locationtitle')

%table
  %thead
    %tr
      %th= t('.name')
      %th= t('.description')
      %th= t('.country')
      %th= t('.street')
      %th= t('.postcode')
      %th
      %th
      %th

  %tbody
    - @locations.each_with_index do |location, i|
      - row_class = ""
      - if i % 2 == 0
        - row_class = "even"
      - else
        - row_class = "odd"
      %tr
        %td{:class => "#{row_class} plain"}= location.name
        %td{:class => "#{row_class} plain"}= location.description
        %td{:class => "#{row_class} plain"}= location.country
        %td{:class => "#{row_class} plain"}= location.street
        %td{:class => "#{row_class} plain"}= location.postcode
        %td{:class => "#{row_class} plain"}= link_to 'Show', location
        %td{:class => "#{row_class} plain"}= link_to 'Edit', edit_location_path(location)
        %td{:class => "#{row_class} plain"}= link_to 'Destroy', location, method: :delete, data: { confirm: I18n.t('.confirm') }

%br

= link_to I18n.t('.locationnew'), new_location_path
%p
%h4= I18n.t('.styles')
%input#plainb{onclick: "SetTableStyle(t('.plain'))", type: "button", value: "Plain"}
%input#brightb{onclick: "SetTableStyle(t('.bright'))", type: "button", value: "Bright"}
