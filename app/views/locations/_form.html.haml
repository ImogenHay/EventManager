= form_for @location, :html => {:id => "LocationForm"} do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@location.errors.count, "error")}"
        = I18n.t('.error')
      %ul
        - @location.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :postcode
    = f.text_field :postcode
  .actions
    = f.submit I18n.t('.save')
