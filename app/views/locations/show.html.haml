
%p
  %b Name:
  = @location.name
%p
  %b Description:
  = @location.description
%p
  %b Country:
  = @location.country
%p
  %b Street:
  = @location.street
%p
  %b Postcode:
  = @location.postcode

%b Events:
%table
  %tbody
    - @location.events.each_with_index do |event, i|
      - row_class = ""
      - if i % 2 == 0
        - row_class = "even"
      - else
        - row_class = "odd"
      %tr{id: "event_#{event.id}"}
        %td{:class => "#{row_class} plain"}= event.name
        %td{:class => "#{row_class} plain"}= link_to 'Show', event
        %td{:class => "#{row_class} plain"}= link_to 'Edit', edit_event_path(event)
        %td{:class => "#{row_class} plain"}= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true

%p= link_to t('.add_event'), new_event_path(location_id: @location)

%b Reviews:
%table
  %tbody
    - @location.reviews.each_with_index do |review, i|
      - row_class = ""
      - if i % 2 == 0
        - row_class = "even"
      - else
        - row_class = "odd"
      %tr{id: "review_#{review.id}"}
        %td{:class => "#{row_class} plain"}= review.user.email
        %td{:class => "#{row_class} plain"}= review.rating
        %td{:class => "#{row_class} plain"}='Star'
        - if review.user == current_user
          %td{:class => "#{row_class} plain"}= link_to 'Show', review
          %td{:class => "#{row_class} plain"}= link_to 'Edit', edit_review_path(review)
          %td{:class => "#{row_class} plain"}= link_to 'Destroy', review, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true
        - else
          %td{:class => "#{row_class} plain"}
          %td{:class => "#{row_class} plain"}
          %td{:class => "#{row_class} plain"}



%p= link_to t('.add_review'), new_review_path(location_id: @location)

= link_to t('.edit'), edit_location_path(@location)
\|
= link_to t('.back'), locations_path
